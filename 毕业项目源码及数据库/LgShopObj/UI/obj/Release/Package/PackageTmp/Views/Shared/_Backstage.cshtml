@{ 
    int li_1 = Convert.ToInt32(Session["li_1"]);
    int li_2 = Convert.ToInt32(Session["li_2"]);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>乐购商城后台管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    @*默认选中*@
    <script type="text/javascript">
    $(function () {
        $('.lsm-sidebar-item:eq(' +@li_1+')').addClass("lsm-sidebar-show");
        $('.lsm-sidebar-item:eq(' +@li_1+') ul li a:eq(' +@li_2+')').addClass("active");
    })
    </script>
    <link href="~/Content/BackstageCss/left-side-menu.css" rel="stylesheet" />
    <link href="~/Content/BacksTageFonts/iconfont.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/MyJs/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/MyJs/left-side-menu.js"></script>
    <style>
        .back-right {
            float: right;
            height: auto;
            min-height: 700px;
            max-width: 88%;
            width: 88%;
            margin-top: 80px;
        }

        .logo {
            margin-left: 20px;
        }

        .logo {
            float: left;
        }

        .out {
            width: 80px;
            height: 80px;
            line-height: 80px;
            font-size: 1.2em;
            text-align: center;
            float: right;
            margin-right: 45px;
        }

        .out_a {
            display: inline-block;
            width: 80px;
            height: 100%;
            color: #B2B8B3;
            transition: all 0.4s;
        }

            .out_a:hover {
                color: #B2B8B3;
                text-decoration: none;
                transform: scale(1.1,1.1);
                transition: all 0.4s;
            }
    </style>
</head>
<body>
    <div class="top" style="width: 100%;height: 80px;background-color: #3B3E47;position:fixed;top:0px;left:0px;">
        <div class="logo"><img src="~/Content/BacktageImgs/logo_back.png" /></div>
        <div class="out">
            <a href="/BacksTage/AdminOut" onclick="return confirm('您确定退出吗?');" class="out_a">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-box-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M11.646 11.354a.5.5 0 0 1 0-.708L14.293 8l-2.647-2.646a.5.5 0 0 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0z" />
                    <path fill-rule="evenodd" d="M4.5 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5z" />
                    <path fill-rule="evenodd" d="M2 13.5A1.5 1.5 0 0 1 .5 12V4A1.5 1.5 0 0 1 2 2.5h7A1.5 1.5 0 0 1 10.5 4v1.5a.5.5 0 0 1-1 0V4a.5.5 0 0 0-.5-.5H2a.5.5 0 0 0-.5.5v8a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5v-1.5a.5.5 0 0 1 1 0V12A1.5 1.5 0 0 1 9 13.5H2z" />
                </svg>
                退出
            </a>
        </div>
    </div>
    <div class="left-side-menu">
        <div class="lsm-container">
            <div class="lsm-scroll">
                <div class="lsm-sidebar">
                    <ul>
                        <li class="lsm-sidebar-item">
                            <a href="javascript:;"><i class="my-icon lsm-sidebar-icon icon_1"></i><span>用户管理</span><i class="my-icon lsm-sidebar-more"></i></a>
                            <ul>
                                <li><a href="/BacksTage/Index"><span>用户列表</span></a></li>
                                <li><a href="/BacksTage/AddUser"><span>新增用户</span></a></li>
                            </ul>
                        </li>
                        <li class="lsm-sidebar-item">
                            <a href="javascript:;"><i class="my-icon lsm-sidebar-icon icon_2"></i><span>商品管理</span><i class="my-icon lsm-sidebar-more"></i></a>
                            <ul>
                                <li><a href="/BacksTage/BackGoodsIndex"><span>商品列表</span></a></li>
                                <li><a href="/BacksTage/AddGoods"><span>新增商品</span></a></li>
                            </ul>
                        </li>
                        <li class="lsm-sidebar-item">
                            <a href="javascript:;"><i class="my-icon lsm-sidebar-icon icon_3"></i><span>分类管理</span><i class="my-icon lsm-sidebar-more"></i></a>
                            <ul>
                                <li><a href="/BackType/BackTypeIndex"><span>分类设置</span></a></li>
                            </ul>
                        </li>
                        <li class="lsm-sidebar-item">
                            <a href="javascript:;"><i class="my-icon lsm-sidebar-icon icon_4"></i><span>反馈管理</span><i class="my-icon lsm-sidebar-more"></i></a>
                            <ul>
                                <li><a href="/BackType/BackFeedbackIndex"><span>反馈处理</span></a></li>
                            </ul>
                        </li>
                        <li class="lsm-sidebar-item">
                            <a href="javascript:;"><i class="my-icon lsm-sidebar-icon icon_5"></i><span>公告管理</span><i class="my-icon lsm-sidebar-more"></i></a>
                            <ul>
                                <li><a href="/BackType/BackNoticeIndex"><span>公告列表</span></a></li>
                            </ul>
                        </li>
                        <li class="lsm-sidebar-item">
                            <a href="javascript:;"><i class="my-icon lsm-sidebar-icon icon_6"></i><span>评论管理</span><i class="my-icon lsm-sidebar-more"></i></a>
                            <ul>
                                <li><a href="/BackType/BackCommentIndex"><span>评论列表</span></a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <div class="back-right">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("backscripts", required: false)
</body>
</html>




