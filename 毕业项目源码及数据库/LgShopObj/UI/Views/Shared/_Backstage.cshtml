            float: right;
            height: auto;
            min-height: 700px;
            max-width: 88%;
            width: 88%;
            margin-top: 80px;
        }

        .logo {
            margin-left: 20px;
        }

        .logo {
            float: left;
        }

        .out {
            width: 80px;
            height: 80px;
            line-height: 80px;
            font-size: 1.2em;
            text-align: center;
            float: right;
            margin-right: 20px;
        }

        .out_a {
            display: inline-block;
            width: 80px;
            height: 100%;
            color: #B2B8B3;
            transition: all 0.4s;
        }

            .out_a:hover {
                text-decoration: none;
                transform: scale(1.1,1.1);
                transition: all 0.4s;
            }
    </style>
