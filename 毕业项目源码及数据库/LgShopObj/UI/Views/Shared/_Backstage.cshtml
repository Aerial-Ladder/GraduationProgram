    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/BackstageCss/left-side-menu.css" rel="stylesheet" />
    <link href="~/Content/BacksTageFonts/iconfont.css" rel="stylesheet" />
    <script src="~/Scripts/MyJs/jquery.min.js"></script>
